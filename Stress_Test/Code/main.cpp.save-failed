int n, q, tms;
int e[N], s[N];
long long d[N];
int num[N], tail[N], h[N], up[N][M];
bool mark[N];
stack<int> st;
vector<int> ds;
vector<ii> adj[N], g[N];

void dfs(int u){
    num[u] = ++tms;
    for(auto [v, w] : adj[u]){
        up[v][0] = u;
        h[v] = h[u] + 1;
        d[v] = d[u] + w;
        FOR(i, 1, __lg(h[v])) up[v][i] = up[up[v][i-1]][i-1];
        dfs(v);
    }
    tail[u] = tms;
}

int lca(int u, int v){
    if(h[u] != h[v]){
        if(h[u] < h[v]) swap(u, v);
        int k = h[u] - h[v];
        F0Rd(i, __lg(k)+1) if((k >> i) & 1) u = up[u][i];
    }
    if(u == v) return u;
    F0Rd(i, __lg(h[u])+1) if(up[u][i] != up[v][i]) u = up[u][i], v = up[v][i];
    return up[u][0];
}

bool cmp(int x, int y){
    return num[x] < num[y];
}

long long F[N], res;
void DFS1(int u){
    F[u] = 0;
    s[u] = mark[ds[u]];
    for(auto [v, w] : g[u]){
        DFS1(v);
        F[u] += F[v] + 1LL * s[v] * w;
        s[u] += s[v];
    }
}

void DFS2(int u){
    if(mark[ds[u]]) res += F[u];
    for(auto [v, w] : g[u]){
        F[v] += F[u] - (F[v] + 1LL * s[v] * w) + 1LL * (s[0] - s[v]) * w;
        DFS2(v);
    }
    mark[ds[u]] = false;
    g[u].clear();
}

void solve(void){
    sort(all(ds), cmp); ds.resize(unique(all(ds)) - ds.begin());
    int m = sz(ds);
    for(int i = 0; i < m; i++) ds.push_back(lca(ds[i], ds[i+1]));
    sort(all(ds), cmp); ds.resize(unique(all(ds)) - ds.begin());

    while(sz(st)) st.pop();
    for(int i = 0; i < sz(ds); i++){
        while(sz(st) && num[ds[i]] > tail[ds[st.top()]]) st.pop();
        if(sz(st)){
//            cout << ds[st.top()] << ' ' << ds[i] << ' ' << d[ds[i]] - d[ds[st.top()]] << endl;
            g[st.top()].pb(i, d[ds[i]] - d[ds[st.top()]]);
        }
        st.push(i);
    }
    res = 0;
    DFS1(0); DFS2(0);
    cout << res / 2 << '\n';
}

void sol(void){
    cin >> n >> q;
    FOR(i, 2, n) cin >> e[i];
    FOR(i, 2, n){
        int w; cin >> w;
        adj[e[i]].pb(i,w);
    }
    dfs(1);
    while(q--){
        int k; cin >> k;
        ds.clear();
        FOR(i, 1, k){
            int u; cin >> u;
            ds.push_back(u);
            mark[u] = true;
        }
        solve();
    }
}

