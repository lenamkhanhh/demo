int n, k, s, t;
struct Egde{
    int u, v;
    long long flow, cap, cost;
};
vector<Egde> e;
int p[N];
long long dist[N], res;
bool mark[N];
vector<int> g[N];

void add(int u, int v, int c, int d){
    int k = sz(e);
    e.push_back({u, v, 0, d, c});
    e.push_back({v, u, 0, 0, -c});
    g[u].push_back(k);
    g[v].push_back(k+1);
}

bool findPath(){
    FOR(i, 1, n){
        dist[i] = -INF;
        p[i] = mark[i] = 0;
    }
    dist[s] = 0;
    queue<int> q; q.push(s);
    while(sz(q)){
        int u = q.front(); q.pop();
        mark[u] = false;
        for(int id : g[u]) if(e[id].cap > e[id].flow){
            int v = e[id].v;
            if(ckmax(dist[v], dist[u] + e[id].cost)){
                p[v] = id;
                if(mark[v] == false){
                    mark[v] = true;
                    q.push(v);
                }
            }
        }
    }
    return dist[t] > -INF;
}

bool ok[N];
void dfs(){
    vector<int> path;
    int u = s;
    while(u != t){
        path.push_back(u);
        bool flag = false;
        for(int id : g[u]){
            int v = e[id].v;
            if(e[id].cap == e[id].flow && e[id].flow == 1 && ok[id] == false){
                ok[id] = true;
                u = v;
                flag = true;
                break;
            }
        }
        if(flag == false) exit(0);
    }
    path.push_back(t);
    cout << sz(path) << ' ';
    for(int x : path) cout << x << ' ';
    cout << '\n';
}

void IncFlow(){
    long long delta = -INF;
    for(int u = t; u != s; u = e[p[u]].u) delta = min(delta, e[p[u]].cap - e[p[u]].flow);
    delta = min(delta, 1LL * k);
    for(int u = t; u != s; u = e[p[u]].u){
        e[p[u]].flow += delta;
        e[p[u]^1].flow -= delta;
    }
    res += 1LL * dist[t] * delta;
}

void sol(void){
    cin >> n >> k >> ms >> me;
    FOR(i, 1, n) cin >> e[i];
    long long sum = 0;
    FOR(i, 1, n) cin >> s[i], sum += s[i];
    s = n+2, t = n+1;
    add(s, 0, 0, k-ms);
    FOR(i, 1, k) add(0, i, 0, 1);
    FOR(i, 1, n){
        add(i, i+1, 0, k-ms-me);
        add(i, min(i+k, t), e[i]-s[i], 1);
    }
    while(findPath()) IncFlow();
    cout << res + sum << '\n';
}

